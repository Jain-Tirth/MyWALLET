{
  "name": "metamask-clone-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for MetaMask Clone bridge functionality",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:testnet": "hardhat run scripts/deploy-bridges.js --network goerli",
    "deploy:mainnet": "hardhat run scripts/deploy-bridges.js --network mainnet",
    "verify": "hardhat verify --network",
    "deploy:all": "npm run deploy:testnet && npm run deploy:mainnet"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.0",
    "dotenv": "^16.0.3",
    "hardhat": "^2.14.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-waffle": "^2.0.5",
    "chai": "^4.3.7",
    "ethereum-waffle": "^4.0.10",
    "ethers": "^5.7.2"
  }
} 
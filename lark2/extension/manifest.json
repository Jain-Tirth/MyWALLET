{
    "manifest_version": 3,
    "name": "ReactConnect Wallet",
    "version": "1.0",
    "description": "A secure wallet for React applications",
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": {
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }],
    "permissions": [
      "storage",
      "activeTab"
    ],
    "icons": {
      "128": "icons/icon128.png"
    }
  }